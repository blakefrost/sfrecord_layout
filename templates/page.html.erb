<div class="broadsheet" style="height: <%= page.pixel_height %>px">
  <%= render 'page_header', page: page %>

  <% page.content_regions.each_with_index do |content_region, i| %>
    <%= render 'content_region', content_region: content_region %>
  <% end -%>

  <% if composing? %>
    <div class="row">
      <div class="col span24">
        <input class="add-content-btn" type="button" value="Add Content Region" data-page-number="<%= page.number %>" data-page-id="<%= page.id %>"></input>
      </div>
    </div>
<% end -%>
</div>
