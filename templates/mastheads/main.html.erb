<!-- Masthead -->
<div class="row">
  <div class="col span24">
    <div class="masthead">
      <%= render 'logo' %>

      <a class="home" href="http://sfrecord.com">www.sfrecord.com</a>

      <div class="news-fit-to-sign">“All the News That's Fit to Sign”</div>
      <div class="buy-or-subscribe">
        <%= link_to "Buy or Subscribe", edition.store_link %>
        <br><em>to support this paper</em></div>

      <div class="masthead-foot">
        <p class="volume pull-left"><%= edition.volume_label %></p>
        <p class="price pull-right"><%= edition.fmt_price %></p>
        <p class="publish-date"><%= edition.publish_date.strftime("%A, %B %d, %Y") %></p>

      </div>
    </div>

    <!-- Mini Mast -->
    <div slidein-nav="true" class="ng-isolate-scope ng-scope slidein-nav" style="display: none; top: -48px;">
      <div class="mini-mast">
        <h1 class="sfrecord">
          <a href="#">San Francisco Record</a>
        </h1>
        <div class="buy-or-subscribe">
          <a href="/newstand">Buy or Subscribe</a>
        </div>
      </div>
    </div>
  </div>
</div>
